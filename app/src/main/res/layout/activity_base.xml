<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/base_background_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">


    <com.insightsurface.notebook.widget.bar.TopBar
        android:id="@+id/base_topbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:left_background="@drawable/nav_back_icon"
        app:title_text="标题"
        app:title_textColor="@color/main_text_color"/>

    <FrameLayout
        android:id="@+id/base_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/base_topbar"/>
</RelativeLayout>